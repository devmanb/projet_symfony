{% extends 'base_login.twig' %}

{% block title %}Authentification!{% endblock %}

{% block body %}
<div class="row">
<form method="post" class=" col-xs-12 col-lg-5 col-md-6 col-sm-6  offset-2 offset-xs-0 " style="padding:20px;margin-top:30px;border:1px solid #aaaa;box-shadow:0 0 10px black;" action="{{ path('app_login') }}">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Authentification</h1>
    <label for="inputEmail" class="sr-only" style="margin-top:10px;">Adresse</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="e-mail" required autofocus>
    <br>
    <label  for="inputPassword" class="sr-only">Mots de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mots de passe" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit" style="margin-top:10px;border-raduis:3px;">
        Se connecter
    </button>
    <a class="btn btn-lg btn-success" style="margin-top:10px;" href="{{ path('app_register')}}" class="">Inscription</a>
</form>
</div>
{% endblock %}