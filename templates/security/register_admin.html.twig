{% extends 'base.html.twig' %}
 
{% block title %}Inscription !{% endblock %}
 
{% block body %}
    
    <form method="post" class="col-6 offset-3 pt-5" style="margin-top:30px;padding:30px;border:1px solid #aaa;box-shadow:0px 0px 10px rgba(0,0,0,.5);border-radius:5px;">
 
        <h1 class="h3 mb-3 font-weight-normal">Ajoute de utilisateur</h1>
        <br>
        <label for="inputNomComplet" class="sr-only">Nom Complet</label>
        <input type="text" name="nomComplet" id="inputNomComplet" class="form-control" placeholder="Nom Complet" required autofocus>
        <br>
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" name="email" id="inputEmail" class="form-control col-10" placeholder="Email" required autofocus>
        <br>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control col-10" placeholder="Password" required>
        <br>
        <button class="btn btn-lg btn-primary" type="submit">
            Enregistrer
        </button>
    </form>
{% endblock %}