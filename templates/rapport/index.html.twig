{% extends 'base.html.twig' %}

{% block title %}Rapport{% endblock %}

{% block body %}
<div class="col-12" style="margin-top:10px;"><a style="padding:5px;" href="{{ path('home') }}">Accueil</a>><a style="padding:5px;" href="{{ path('rapport_index') }}">Rapport</a></div>
            <hr>
    <h1>Rapport index</h1>

    <table class="table">
        <thead>
            <tr>
    
                <th>Text</th>
                <th>Lien</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rapport in rapports %}
            <tr>
                <td>{{ rapport.id }}</td>
                <td>{{ rapport.text }}</td>
                <td>{{ rapport.lien }}</td>
                <td>{{ rapport.date ? rapport.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('rapport_show', {'id': rapport.id}) }}">show</a>
                    <a href="{{ path('rapport_edit', {'id': rapport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rapport_new') }}">Create new</a>
{% endblock %}
